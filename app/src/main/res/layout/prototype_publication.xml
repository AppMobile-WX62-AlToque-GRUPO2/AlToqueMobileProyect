<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvPublication"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="#756F6F"
    app:cardCornerRadius="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:background="#E0E0E0">

        <TextView
            android:id="@+id/tvPublicationTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/ivPublication"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Nombre" />

        <TextView
            android:id="@+id/tvPublicationDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="8dp"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/ivPublication"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Descripcion" />

        <ImageView
            android:id="@+id/ivPublication"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <Button
            android:id="@+id/btnVerMas"
            android:layout_width="93dp"
            android:layout_height="38dp"
            android:layout_marginStart="44dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="#FF5555"
            android:text="VER MÁS"
            android:textColorLink="#FF5555"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivPublication" />

        <ImageButton
            android:id="@+id/ibDeleteContractEspecialistProposal"
            android:layout_width="53dp"
            android:layout_height="47dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="#00FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnVerMas"
            app:srcCompat="@android:drawable/ic_menu_delete"
            app:tint="#000000" />

        <ImageButton
            android:id="@+id/ibEditPublication"
            android:layout_width="55dp"
            android:layout_height="47dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="#00050505"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ibDeleteContractEspecialistProposal"
            app:srcCompat="@android:drawable/ic_menu_edit"
            app:tint="#000000" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>